<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_border_all_black_24dp"
        android:key="@string/routes_initialized_key"
        android:title="Routes Table Initialized" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_border_all_black_24dp"
        android:key="@string/stops_initialized_key"
        android:title="Stops Table Initialized" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_border_all_black_24dp"
        android:key="@string/trips_initialized_key"
        android:title="Trips Table Initialized" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:icon="@drawable/ic_border_all_black_24dp"
        android:key="@string/stop_times_initialized_key"
        android:title="Stop Times Table Initialized" />

    <EditTextPreference
        android:summary="Set the range within which nearby bus stops are recommended to you on the map."
        android:key="@string/nearby_stops_range_key"
        android:icon="@drawable/ic_near_me_black_24dp"
        android:title="Nearby stops range"
        android:defaultValue="@string/nearby_stops_range_default_value"
        />


</PreferenceScreen>